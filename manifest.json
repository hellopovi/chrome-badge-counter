{
  "name": "Counter Badge Extension",
  "description": "Use buttons in popup to increase or decrease counter",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "16": "flask16.png",
    "128": "flask128.png"
  },
  "permissions": ["contextMenus", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}
